        ul.navbar-nav
            each val, key in { 'home':'Home', 'videos':'My Videos', 'gallery':'Gallery' }
                li.nav-item
                    a(class=(navKey === key ? 'nav-link active' : 'nav-link') href=key)= val
        ul.navbar-nav.ml-auto
            li.nav-item
                a.nav-link(href='/logout') Exit&nbsp;
                    i.fa.fa-sign-out
